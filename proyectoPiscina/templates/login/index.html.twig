{% extends 'base.html.twig' %}

{% block title %}{{title}}
{% endblock %}

{% block body %}




<div class="background-login container-fluid">

    <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="col-8">
            <div class="row">

                <form class="login-form" action="">

                    <div class="col-12 pl-0">

                        <div class="row">
                            <div class="col-1" id="login-caja"></div>
                            <div class="col-10 col-md-11 d-flex justify-content-center align-items-center">
                                <p class="login-title">Iniciar sesión</p>
                            </div>

                        </div>

                    </div>
                    <div class="col-12">
                        <input class="login-input py-2" type="text" name="nombre" placeholder="Usuario">
                    </div>
                    <div class="col-12">
                        <input class="login-input py-2" type="text" name="password" placeholder="Contraseña">
                    </div>
                    <div class="col-12">
                        <input class="login-submit py-3" type="submit" value="Entrar">
                    </div>

                </form>
            </div>
        </div>

    </div>




</div>

{% endblock %}