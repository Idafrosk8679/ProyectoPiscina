{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid h-100">
	<div class="row h-100">

		<div class="col-12 p-0">
			<header>
				<nav class="navbar nav navbar-expand-md">
					<div class="row w-100">
						<div class="col-0 d-flex align-items-center justify-content-center">
							<button class="navbar-toggler navbar-light" type="button" data-toggle="collapse"
								data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
								aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
							</button>
						</div>

						<div class="col-2">
							<a class="navbar-brand pl-lg-5 pl-md-4 pl-sm-3 mr-lg-3 mr-md-2 mr-sm-0"
								href="{{ path('eventos') }}">
								<img src="/img/logoR.png" height="70" alt="mdb logo">
							</a>
						</div>

						<div class="col-8 d-flex align-items-center justify-content-center">
							<h2>FENIX MANISES</h2>
						</div>

						<div class="col-12 col-md-2 d-flex align-items-center justify-content-center">
