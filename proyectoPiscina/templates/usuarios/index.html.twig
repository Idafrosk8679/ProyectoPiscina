{% extends 'base.html.twig' %}

{% block title %}Usuarios index{% endblock %}

{% block body %}
    <h1>Usuarios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Dni</th>
                <th>Nombre</th>
                <th>Apelllidos</th>
                <th>Foto</th>
                <th>FechaNac</th>
                <th>Pass</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.dni }}</td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apelllidos }}</td>
                <td>{{ usuario.foto }}</td>
                <td>{{ usuario.fechaNac ? usuario.fechaNac|date('Y-m-d') : '' }}</td>
                <td>{{ usuario.pass }}</td>
                <td>
                    <a href="{{ path('usuarios_show', {'dni': usuario.dni}) }}">show</a>
                    <a href="{{ path('usuarios_edit', {'dni': usuario.dni}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('usuarios_new') }}">Create new</a>
{% endblock %}
