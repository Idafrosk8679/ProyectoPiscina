{% extends 'LayoutApp.html.twig' %}

{% block title %}Grupos index{% endblock %}

{% block main %}
    <h1>Grupos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grupo in grupos %}
            <tr>
                <td>{{ grupo.id }}</td>
                <td>{{ grupo.nombre }}</td>
                <td>
                    <a href="{{ path('grupos_show', {'id': grupo.id}) }}">show</a>
                    <a href="{{ path('grupos_edit', {'id': grupo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gestion_usuarios') }}">Create new</a>
{% endblock %}
