{% extends 'layoutApp.html.twig' %}

{% block title %}Grupo {{grupo.nombre|upper}}{% endblock %}

{% block main %}

<button class="atras-button">
    <a class="atras-href" href="{{ path('app_gestion_usuarios') }}">❮ Volver</a>
</button>

    <h1>Grupos</h1>

        <div class="row">
            
            <div class="col-12">

                <ul class="list-group">
                    <li class="list-group-item active">
                        <div class="row">
                            <div class="col-6">
                                {{grupo.nombre|upper}}
                            </div>
                            <div class="col-6">
                                <a class="list-group-item active" href="{{ path('app_grupos_edit', {'id': grupo.id}) }}">Añadir a grupo</a>
                            </div>
                        </div>

                    </li>

                    {% for grupoF in data|filter(grupoF => grupoF.idGrupo.id == grupo.id) %}
                    <li class="list-group-item">{{ grupoF.idUsuario.nombre }}</li>
                    {% endfor %}

                </ul>

            </div>

        </div>

    {{ include('grupos/_delete_form.html.twig') }}
{% endblock %}
