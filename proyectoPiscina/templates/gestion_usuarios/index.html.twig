{% extends 'layoutApp.html.twig' %}

{% block title %}{% endblock %}

{% block main %}


<a href="{{ path('app_index') }}">Atrás</a>



<h1>Usuarios</h1>
<a href="{{ path('app_usuarios_new') }}">Añadir</a>
<table id="dtBasicExample" class="table table-hover table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">DNI
            </th>
            <th class="th-sm">Nombre
            </th>
            <th class="th-sm">Apellidos
            </th>
            <th class="th-sm">Rol
            </th>
            <th class="th-sm">Fecha de Nacimiento
            </th>
            <th class="th-sm">Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        {% if user.rol == 'junta' or user.rol == 'admin' %}
        {% set filtro = '' %}
        {% endif %}

        {% if user.rol == 'entrenador' or user.rol == 'admin' %}
        {% set filtro = 'junta' %}
        {% endif %}

        {% for usuario in data["usuarios"] %}

        {% if usuario.rol.nombre != filtro and usuario.dni != user.dni %}
        <tr>
            <td>{{ usuario.dni }}</td>
            <td>{{ usuario.nombre }}</td>
            <td>{{ usuario.apelllidos }}</td>
            <td>{{ usuario.rol.nombre }}</td>
            <td>{{ usuario.fechaNac|date("d-m-Y") }}</td>
            <td>
                <a href="{{ path('app_usuarios_show', {'dni': usuario.dni}) }}">Ver</a>
                <a href="{{ path('app_usuarios_edit', {'dni': usuario.dni}) }}">Modificar</a>
            </td>
        </tr>
        {% endif %}
        {% else %}
        {% endfor %}

    </tbody>

</table>




<h1>Grupos</h1>

<a href="{{ path('app_grupos_new') }}">Crear grupo</a>
<div class="row">
    {% for grupo in data["grupos"] %}
    <div class="col-6">

        <ul class="list-group">
            <li class="list-group-item active">
                <div class="row">
                    <div class="col-6">
                       <a class="list-group-item active" href="{{ path('app_grupos_show', {'id': grupo.id}) }}">{{grupo.nombre|upper}}</a> 
                    </div>
                    <div class="col-6">
                        <a class="list-group-item active" href="{{ path('app_grupos_edit', {'id': grupo.id}) }}">Añadir a grupo</a>
                    </div>
                </div>

            </li>

            {% for grupoF in data["grupo_usuarios"]|filter(grupoF => grupoF.idGrupo.id == grupo.id) %}
            <li class="list-group-item">{{ grupoF.idUsuario.nombre }}</li>
            {% endfor %}

        </ul>

    </div>
    {% endfor %}
</div>


{% endblock %}