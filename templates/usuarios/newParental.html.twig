{% extends 'layoutApp.html.twig' %}

{% block title %}New Usuarios{% endblock %}

{% block main %}
<button class="atras-button">
    <a class="atras-href" href="{{ path('app_gestion_usuarios') }}">‚ùÆ Volver</a>
</button>


{{ form_start(form, {'attr':{'class':'border border-light p-5'} }) }}
<h1 class="mb-5 text-center">Crear Usuario Parental</h1>

<div class="row">
    <label for="">DNI</label>
    {{ form_widget(form.dni, {'attr':{'class':'form-control mb-4'} }) }}
</div>

<div class="row">
    <label for="">Password</label>
    {{ form_widget(form.pass, {'attr':{'class':'form-control validate mb-4'} }) }}
</div>

<div class="row">
    <label for="">Nombre</label>
    {{ form_widget(form.nombre, {'attr':{'class':'form-control mb-4'} }) }}
</div>

<div class="row">
    <label for="">Apellidos</label>
    {{ form_widget(form.apelllidos, {'attr':{'class':'form-control mb-4'} }) }}
</div>


<button class="btn app-button-func1 btn-block">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}


{% endblock %}